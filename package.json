{
  "name": "pheonix",
  "version": "1.0.0",
  "description": "RC Tech data server",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --runInBand --testPathIgnorePatterns utils",
    "dev": "nodemon",
    "lint": "eslint . --ext .ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/jsonwebtoken": "^8.3.5",
    "apollo-server": "^2.9.6",
    "apollo-server-express": "^2.9.6",
    "aws-sdk": "^2.631.0",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "google-auth-library": "^5.4.1",
    "graphql": "^14.5.8",
    "graphql-import": "^0.7.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "nodemailer": "^6.4.2",
    "pg": "^7.12.1",
    "prisma-client-lib": "^1.34.8",
    "universal-cookie": "^4.0.3"
  },
  "devDependencies": {
    "@types/graphql": "^14.5.0",
    "@types/jest": "^24.0.18",
    "@types/nodemailer": "^6.4.0",
    "@types/universal-cookie": "^2.2.0",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "apollo-server-testing": "^2.9.6",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-prettier": "^3.1.2",
    "graphql-tag": "^2.10.3",
    "husky": "^4.0.10",
    "jest": "^24.9.0",
    "lint-staged": "^10.0.0",
    "nodemon": "^1.19.3",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4"
  },
  "nodemonConfig": {
    "ignore": [
      "__tests__",
      "node_modules",
      "src/generated",
      ".git"
    ],
    "watch": [
      "src",
      "package.json",
      "prisma"
    ],
    "exec": "prisma generate && npm run build && npm start",
    "ext": "ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,css,json,md}": [
      "prettier --write",
      "npm run lint"
    ]
  }
}
