{
  "name": "pheonix",
  "version": "1.0.0",
  "description": "RC Tech data server",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "postbuild": "node postbuild.js",
    "start": "node dist/index.js",
    "test": "jest --runInBand --testPathIgnorePatterns utils",
    "dev": "nodemon",
    "lint": "eslint . --ext .ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/jsonwebtoken": "^8.5.0",
    "apollo-server": "^2.19.1",
    "apollo-server-express": "^2.19.1",
    "aws-sdk": "^2.817.0",
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "google-auth-library": "^5.10.1",
    "graphql": "^14.7.0",
    "graphql-import": "^0.7.1",
    "graphql-middleware": "^4.0.3",
    "graphql-shield": "^7.4.4",
    "graphql-tools": "^5.0.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "nodemailer": "^6.4.17",
    "pg": "^7.18.2",
    "prisma-client-lib": "^1.34.10",
    "universal-cookie": "^4.0.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^24.9.1",
    "@types/nodemailer": "^6.4.0",
    "@types/universal-cookie": "^2.2.0",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "apollo-server-testing": "^2.19.1",
    "apollo-server-types": "^0.6.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-prettier": "^3.3.0",
    "graphql-tag": "^2.11.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "prisma": "^1.34.10",
    "ts-jest": "^26.4.4",
    "typescript": "^3.9.7"
  },
  "nodemonConfig": {
    "ignore": [
      "__tests__",
      "node_modules",
      "src/generated",
      ".git"
    ],
    "watch": [
      "src",
      "package.json",
      "prisma"
    ],
    "exec": "prisma generate && npm run build && npm start",
    "ext": "ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "npm run lint"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
